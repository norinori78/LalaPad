name: build-lalapad
on: workflow_dispatch:
push:branches: [ main ]
    paths:
      - ".github/workflows/zmk-build.yml"
      - "firmware/**"

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - uses: actions/setup-python@v5
        with:
          python-version: "3.x"

      - name: Install deps
        run: |
          sudo apt-get update
          sudo apt-get install -y cmake ninja-build gperf ccache dfu-util device-tree-compiler wget python3-pip
          pip3 install west

      - name: Fetch ZMK workspace
        run: |
          west init -l firmware
          west update
          west zephyr-export

      - name: Build right
        run: |
          west build -s zmk/app -d build/right -- -DZMK_CONFIG="${{ github.workspace }}/firmware/config"
          mkdir -p output
          cp build/right/zephyr/zmk.uf2 output/LalaPad_right.uf2

      - name: Upload artifact
        uses: actions/upload-artifact@v4
        with:
          name: LalaPad_right_firmware
          path: output/LalaPad_right.uf2
